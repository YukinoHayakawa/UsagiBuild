<Project>
  <PropertyGroup>
    <PlatformToolset>ClangCL</PlatformToolset>
    <LLVMInstallDir>C:\Program Files\LLVM</LLVMInstallDir>
  </PropertyGroup>
  <ItemDefinitionGroup Condition="'$(PlatformToolset)'=='ClangCL'">
    <ClCompile>
      <AdditionalOptions>-Xclang -std=c++20 -Wno-c++98-compat -Wno-pragma-pack -Wno-macro-redefined -Xclang -fdiagnostics-show-template-tree -Xclang -fno-elide-type -march=haswell</AdditionalOptions>
      <PreprocessorDefinitions>_HAS_CXX17;_HAS_CXX20;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>
</Project>
